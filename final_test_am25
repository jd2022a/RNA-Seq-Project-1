        dot.scale = 8) + RotatedAxis()
FeaturePlot(am25f.testes, features = c("Sall4","Dmrt1","Dazl","Kit","Sycp3","Mtl5","Nxt1",
                                       "Shcbp1l","Lyzl1","Acrv1","Hemgn","Txndc8","Tssk6","Oaz3","Prm1","Prm2"))









